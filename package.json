{
  "name": "zuckerman",
  "version": "0.1.0",
  "description": "AI Personal agent that can adapt in real time to all your needs",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "zuckerman": "./dist/clients/cli/index.js"
  },
  "packageManager": "pnpm@10.28.2",
  "scripts": {
    "build": "tsc && tsc-alias",
    "build:workspace": "turbo run build",
    "dev": "turbo run dev --filter=@zuckerman/app",
    "dev:cli": "tsx watch --clear-screen=false src/index.ts",
    "gateway": "tsx src/clients/cli/index.ts gateway",
    "gateway:watch": "tsx watch --clear-screen=false src/clients/cli/index.ts gateway",
    "agent": "tsx src/clients/cli/index.ts agent",
    "status": "tsx src/clients/cli/index.ts status",
    "cli": "tsx src/clients/cli/index.ts",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "clean": "turbo run clean && rm -rf node_modules",
    "typecheck": "turbo run typecheck"
  },
  "keywords": [
    "ai",
    "agent",
    "assistant"
  ],
  "license": "AGPL-3.0",
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@ai-sdk/anthropic": "^3.0.41",
    "@ai-sdk/openai": "^3.0.26",
    "@sinclair/typebox": "^0.34.48",
    "@slack/bolt": "^4.6.0",
    "@whiskeysockets/baileys": "7.0.0-rc.9",
    "ai": "^6.0.79",
    "chokidar": "^5.0.0",
    "commander": "^14.0.3",
    "croner": "^10.0.1",
    "deepmerge": "^4.3.1",
    "discord.js": "^14.25.1",
    "dotenv": "^17.2.3",
    "glob": "^13.0.0",
    "grammy": "^1.39.3",
    "node-edge-tts": "^1.2.9",
    "pino": "^10.3.0",
    "playwright-core": "^1.58.1",
    "qrcode-terminal": "^0.12.0",
    "ws": "^8.19.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "@types/qrcode-terminal": "^0.12.2",
    "@types/ws": "^8.18.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.21.0",
    "turbo": "^2.8.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
